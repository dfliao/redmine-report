# ======================================
# SYNOLOGY DS920+ 部署 - 環境變數設定
# ======================================

# Redmine 伺服器配置
REDMINE_URL=http://your-redmine.example.com
REDMINE_API_KEY=your_redmine_api_key_here
REDMINE_VERSION=6.0.6
REDMINE_TIMEOUT=30
REDMINE_VERIFY_SSL=true

# Email 配置 (與 Redmine configuration.yml 相同設定)
# 參考: /volume3/container/redmine/config/configuration.yml
SMTP_HOST=192.168.0.222
SMTP_PORT=587
SMTP_USERNAME=GOPEAK@mail.gogopeaks.com
SMTP_PASSWORD=5w~IDW
EMAIL_FROM=GOPEAK@mail.gogopeaks.com
# 以下是 Redmine 使用的設定:
# domain: mail.gogopeaks.com
# authentication: login  
# enable_starttls_auto: true
# openssl_verify_mode: none

# 報表配置
REPORT_DAYS=14
TIMEZONE=Asia/Taipei
EMAIL_SUBJECT_TEMPLATE=【Redmine報表】{date} - 議題進度統計
EMAIL_CHARSET=utf-8

# API 服務配置
API_HOST=0.0.0.0
API_PORT=3003
API_PREFIX=/api/v1

# 排程配置 (cron 格式)
# 範例:
# 每日上午 8 點: 0 8 * * *
# 每週一上午 8 點: 0 8 * * 1  
# 每小時執行: 0 * * * *
SCHEDULE_CRON=0 8 * * 1

# 安全配置
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=redmine-report-secret-key-2024

# 效能配置 (適用於 Synology NAS)
MAX_WORKERS=2
WORKER_TIMEOUT=300
MEMORY_LIMIT=256M
CPU_LIMIT=0.8

# 快取配置 (選用 - Redis)
# REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# ======================================
# 部署說明:
# 1. 複製此檔案為 .env
# 2. 填入你的 Redmine 和 Email 設定
# 3. 在 Synology Container Manager 中使用 docker-compose.yml 部署
# ======================================